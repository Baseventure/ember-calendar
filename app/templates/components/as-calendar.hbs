<header>
  <h1>{{title}}</h1>

  <nav>
    <ul>
      <li>
        <button class="previous-week" {{action "navigateWeek" -1}}></button>
      </li>

      <li>
        <button disabled={{isInCurrentWeek}}
                class="current-week"
                {{action "goToCurrentWeek"}}>This Week</button>
      </li>

      <li>
        <button class="next-week" {{action "navigateWeek" 1}}></button>
      </li>
    </ul>
  </nav>
</header>

<section class="days">
  <header>
    {{as-calendar/time-zone-select calendar=this onSelectOption="onSelectTimeZone"}}

    <div class="all-day-label">All Day</div>

    <ul class="time-slot-labels" style={{timeSlotsHeaderStyle}}>
      {{#each timeSlot in headerTimeSlots}}
        <li style={{headerTimeSlotStyle}}>
          {{moment timeSlot.localValue "h A"}}
        </li>
      {{/each}}
    </ul>
  </header>

  <ul>
    {{#each day in days}}
      <li style={{dayStyle}}>
        {{as-calendar/day day=day calendar=this}}
      </li>
    {{/each}}
  </ul>
</section>
