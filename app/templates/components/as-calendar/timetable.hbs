<div class="header columns">
  <ul>
    <li>
      <div class="time-zone">
        {{as-calendar/time-zone-select
          value=timeZone
          onChangeValue="onChangeTimeZone"
          defaultRegexp=defaultTimeZoneRegexp}}
      </div>

      <div class="day-labels">
        <ul>
          {{#each days as |day|}}
            <li>{{moment day.value "ddd D MMM"}}</li>
          {{/each}}
        </ul>
      </div>
    </li>
  </ul>
</div>

<div class="content">
  <div class="header rows">
    <ul class="time-slot-labels" style={{timeSlotLabelListStyle}}>
      {{#each labeledTimeSlots as |timeSlot|}}
        <li style={{timeSlotLabelStyle}}>
          {{moment timeSlot.value "h A"}}
        </li>
      {{/each}}
    </ul>
  </div>

  <div class="grid">
    <div>
      <ul class="time-slots">
        {{#each timeSlots as |timeSlot|}}
          <li style={{timeSlotStyle}}></li>
        {{/each}}
      </ul>

      <ul class="days">
        {{#each days as |day|}}
          <li class={{if day.isToday "today"}}>
            {{#if hasBlock}}
              {{yield day this}}
            {{else}}
              <ul class="occurrences">
                {{#each day.occurrences as |occurrence|}}
                  <li>
                    {{as-calendar/occurrence
                      model=occurrence
                      timeSlotHeight=timeSlotHeight
                      timeSlotDuration=timeSlotDuration}}
                  </li>
                {{/each}}
              </ul>
            {{/if}}
          </li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>
